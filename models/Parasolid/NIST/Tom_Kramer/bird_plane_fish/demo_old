input=0
until test $input -eq 20
do
   read input
   if test $input -eq 1
      then screenload screen1
   elif test $input -eq 2
      then screenload screen2
   elif test $input -eq 3
      then screenload screen3
   elif test $input -eq 4
      then screenload screen4
   elif test $input -eq 5
      then screenload screen5
   elif test $input -eq 6
      then screenload screen6
   elif test $input -eq 7
      then screenload screen7
   elif test $input -eq 8
      then screenload screen8
   elif test $input -eq 9
      then screenload screen9
   elif test $input -eq 10
      then screenload screen10
   elif test $input -eq 11
      then screenload screen11
   elif test $input -eq 12
      then screenload screen12
   elif test $input -eq 13
      then screenload screen13
   elif test $input -eq 14
      then screenload screen14
   elif test $input -eq 15
      then screenload screen15
   elif test $input -eq 16
      then screenload screen16
   else
      screenload screen1
   fi
done